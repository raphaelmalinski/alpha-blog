<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: 'shadow-light p-3 mb-3 bg-dark rounded', local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_field :title, class: 'form-control shadow-light', placeholder: 'Title of Article' %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :description, class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: 'form-control shadow-light', placeholder: 'Description of Article' %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %> 
      <%= link_to '[ Cancel ]', articles_path, class: 'row justify-content-center text-dark' %>
    </div>
  </div>
</div>